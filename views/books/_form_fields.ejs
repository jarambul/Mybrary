<!-- partial file as significed by "_" -->
<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= book.title %>">
 </div>
 <div>
    <label>Author</label>
    <!-- Get a dropdown list of authors by selecting authors variable from server -->
    <select name="author">
    <% authors.forEach(author => { %>
        <% if (author.id === book.author) { %>
            <option selected label="<%= author.name %>" value="<%= author.id %>">
        <% } else { %>
            <option label="<%= author.name %>" value="<%= author.id %>">
        <% } %>
    <% }) %>
    </select>
</div>
<div>
    <!-- inline if statement ... [?] stuff here is if true [:] stuff here is if false -->
    <label>Publish Date</label>
    <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
    <!-- toISOString().spit('T')[0] == convert date to ISOSTring but split at "T" in format mm/dd/yyyyThh:mm and return the first index = mm/dd/yyyy -->
</div>
<div>
    <label>Page Count</label>
    <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover" class="filepond">
</div>
<div>
    <label>Description</label>
    <textarea name="description"><%= book.description %></textarea>
</div>


